{
  "name": "@himenon/pdf-crop-margins",
  "version": "1.0.1",
  "description": "Docker image for pdfCropMargins",
  "keywords": [
    "typescript"
  ],
  "homepage": "https://github.com/Himenon/pdfCropMargins-docker#readme",
  "bugs": {
    "url": "https://github.com/Himenon/pdfCropMargins-docker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Himenon/pdfCropMargins-docker.git"
  },
  "license": "MIT",
  "author": {
    "name": "Himenon",
    "email": "k.himeno314@gmail.com",
    "url": "https://github.com/Himenon"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "Dockerfile"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "sideEffects": false,
  "main": "./lib/$cjs/index.js",
  "module": "./lib/$esm/index.js",
  "types": "./lib/$types/index.d.ts",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.4",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^17.0.36",
    "lint-staged": "^12.4.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.0",
    "semantic-release": "^19.0.2",
    "simple-git-hooks": "^2.8.0",
    "sort-package-json": "^1.57.0",
    "zx": "^6.1.0"
  },
  "engines": {
    "pnpm": ">=7"
  },
  "publishConfig": {
    "access": "public"
  },
  "docker": {
    "scope": "himenon",
    "imageName": "pdf-crop-margins"
  }
}
